{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@context": ["context"],
      "@context/*": ["context/*"],
      "@components/*": ["components/*"],
      "@icons/*": ["components/Icon/*"],
      "@helpers/*": ["helpers/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@modules/*": ["modules/*"],
      "@pages/*": ["pages/*"],
      "@router": ["router"],
      "@router/*": ["router/*"],
      "@vendor/*": ["vendor/*"]
    }
  },
  "include": ["./src"]
}
